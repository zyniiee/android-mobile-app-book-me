<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Headlines">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cabinetgrotesk_bold</item>
    </style>
    <style name="CategoryHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cabinetgrotesk_bold</item>
    </style>
    <style name="CardHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
    </style>
    <style name="MediumBody14">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
    </style>
    <style name="MediumBody12">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
    </style>
    <style name="Body12">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_regular</item>
    </style>
    <style name="Body10">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_regular</item>
    </style>
    <style name="Body8">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_regular</item>
    </style>
    <style name="Body8Italic">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_regularitalic</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:stateListAnimator">@null</item>

    </style>
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:stateListAnimator">@null</item>

    </style>
    <style name="LightBlueBorder" >
        <item name="android:background">@drawable/light_blue_border</item>

    </style>
</resources>